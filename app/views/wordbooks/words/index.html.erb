<p style="color: green"><%= notice %></p>
<h1>单词本: <%= @wordbook.name %></h1>

<table>
  <thead>
    <tr>
      <th>单词</th>
      <th>其它拼写形式</th>
      <th>中文意思</th>
      <th>例句</th>
      <th>音标</th>
      <th>是否掌握</th>
      <th>上次复习时间</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <%= render @wordbooks_words %>
  </tbody>
</table>
<%== pagy_nav(@pagy) if @pagy.pages > 1 %>

<% if @wordbook.system? %>
  <p>系统单词本不支持添加新单词</p>
<% else %>
  <%= link_to "添加新单词", new_wordbooks_word_path %>
<% end %>
<%= link_to "返回单词本", wordbooks_path %>

